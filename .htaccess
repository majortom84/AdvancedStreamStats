RewriteEngine on



#Direct all URLs to HTTPs
RewriteCond %{SERVER_PORT} 80 
RewriteRule ^(.*)$ https://advancedstreamstats.wardwebdev.com/$1 [L,R=301]

#Redirect if www in link
RewriteCond %{HTTP_HOST} ^www\.wardwebdev.com [NC]
RewriteRule ^(.*)$ http://advancedstreamstats.wardwebdev.com/$1 [R=301,L]


RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php/$1 [L]